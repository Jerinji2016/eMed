<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".doctor.DoctorActivity">

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="match_parent"
        android:layout_height="456dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/profile_background_gradient" />

    <ImageView
        android:id="@+id/menu_btn"
        android:layout_width="27dp"
        android:layout_height="30dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/ic_menu" />

    <ImageView
        android:id="@+id/logout_btn"
        android:layout_width="27dp"
        android:layout_height="31dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/menu_btn"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.039"
        app:srcCompat="@drawable/ic_logout" />

    <TextView
        android:id="@+id/logout_text_btn"
        android:layout_width="72dp"
        android:layout_height="32dp"
        android:gravity="center"
        android:textColor="#FFF"
        android:textStyle="bold"
        android:text="Logout"
        android:fontFamily="serif"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/logout_btn"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/menu_btn"
        app:layout_constraintTop_toTopOf="@+id/imageView5"
        app:layout_constraintVertical_bias="0.039" />

    <ImageView
        android:id="@+id/doc_img"
        android:layout_width="106dp"
        android:layout_height="115dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView5"
        app:layout_constraintEnd_toEndOf="@+id/imageView5"
        app:layout_constraintHorizontal_bias="0.18"
        app:layout_constraintStart_toStartOf="@+id/imageView5"
        app:layout_constraintTop_toBottomOf="@+id/logout_text_btn"
        app:layout_constraintVertical_bias="0.344"
        app:srcCompat="@drawable/ic_doc_img" />

    <TextView
        android:id="@+id/doc_name_text"
        android:layout_width="175dp"
        android:layout_height="35dp"
        android:text="Doc Name"
        android:textSize="22sp"
        android:textStyle="bold"
        style="@style/doc_profile_text"
        app:layout_constraintBottom_toBottomOf="@+id/imageView5"
        app:layout_constraintEnd_toEndOf="@+id/imageView5"
        app:layout_constraintHorizontal_bias="0.115"
        app:layout_constraintStart_toEndOf="@+id/doc_img"
        app:layout_constraintTop_toBottomOf="@+id/logout_text_btn"
        app:layout_constraintVertical_bias="0.273" />

    <TextView
        android:id="@+id/doc_specialisation_text"
        android:layout_width="175dp"
        android:layout_height="34dp"
        android:text="Doc Specialisation"
        style="@style/doc_profile_text"
        app:layout_constraintBottom_toBottomOf="@+id/imageView5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.115"
        app:layout_constraintStart_toEndOf="@+id/doc_img"
        app:layout_constraintTop_toBottomOf="@+id/doc_name_text"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/doc_reff_id_text"
        android:layout_width="175dp"
        android:layout_height="39dp"
        android:text="Ref ID:"
        style="@style/doc_profile_text"
        app:layout_constraintBottom_toBottomOf="@+id/imageView5"
        app:layout_constraintEnd_toEndOf="@+id/imageView5"
        app:layout_constraintHorizontal_bias="0.128"
        app:layout_constraintStart_toEndOf="@+id/doc_img"
        app:layout_constraintTop_toBottomOf="@+id/doc_specialisation_text"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/scan_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_scan_primary"
        android:paddingStart="50dp"
        android:paddingEnd="50dp"
        android:text="Scan"
        android:textColor="#aa2020"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/doc_reff_id_text"
        app:layout_constraintVertical_bias="0.161" />

    <Button
        android:id="@+id/patient_record_btn"
        android:background="@drawable/btn_primary_default"
        android:textColor="#FFF"
        android:layout_width="138dp"
        android:layout_height="93dp"
        android:text="Patient\nRecord"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/medical_history_btn"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView5"
        app:layout_constraintVertical_bias="0.214" />

    <Button
        android:id="@+id/medical_history_btn"
        android:background="@drawable/btn_primary_default"
        android:textColor="#FFF"
        android:layout_width="139dp"
        android:layout_height="93dp"
        android:text="Medical\nHistory"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.841"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView5"
        app:layout_constraintVertical_bias="0.214" />

</androidx.constraintlayout.widget.ConstraintLayout>