<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@android:drawable/dialog_holo_light_frame"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="10dp"
        android:paddingVertical="5dp"
        android:weightSum="2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PID : "
                android:textStyle="bold" />

            <TextView
                android:id="@+id/prescription_id"
                android:layout_width="fill_parent"
                android:text="Id"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Date"
            android:id="@+id/prescription_date"
            android:textAlignment="textEnd"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:id="@+id/prescription_ptn_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:paddingHorizontal="10dp"
        android:textSize="16dp"
        android:paddingTop="5dp"
        android:text="Patient Name" />

    <TextView
        android:id="@+id/prescription_ptn_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="10dp"
        android:paddingBottom="5dp"
        android:textSize="14dp"
        android:text="Patient Details" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:id="@+id/prescription_list"
        android:layout_marginVertical="5dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:weightSum="3">

            <TextView
                android:layout_weight="2"
                android:paddingVertical="3dp"
                android:text="Medicine Name"
                android:textAlignment="center"
                android:textStyle="bold" />

            <TextView
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="@color/borderBlackColor" />

            <TextView
                android:layout_weight="1"
                android:paddingVertical="3dp"
                android:text="Dose/Duration"
                android:textAlignment="center"
                android:textStyle="bold" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_weight="1"
                android:background="@color/borderBlackColor" />
        </TableRow>
    </TableLayout>
</LinearLayout>