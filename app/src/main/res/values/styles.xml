<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="btnPrimary">
        <item name="android:textColor">#fff</item>
        <item name="android:background">@drawable/btn_primary_default</item>
        <item name="android:width">30dp</item>
    </style>

    <style name="textboxPrimary">
        <item name="android:background">@drawable/textbox_primary</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="signup_text">
        <item name="android:layout_margin">10dp</item>
        <item name="android:paddingStart">25dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#424242</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="signup_field">
        <item name="android:layout_margin">10dp</item>
        <item name="android:background">@drawable/signup_textbox_primary</item>
        <item name="android:layout_marginLeft">50dp</item>
        <item name="android:layout_marginRight">50dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:layout_width">100dp</item>
    </style>

    <style name="doc_profile_text">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">#FFF</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="user_select_btn">
        <item name="android:background">@drawable/btn_primary_default</item>
        <item name="android:textColor">#FFF</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="PtnTableRow">
        <item name="android:padding">5dp</item>
        <item name="android:weightSum">2</item>
    </style>

    <style name="PtnTableText">
        <item name="android:layout_weight">1</item>
        <item name="android:padding">10dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">end</item>
    </style>

    <style name="PtnTableValues">
        <item name="android:layout_weight">1</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="systemContainer">
        <item name="android:layout_margin">10dp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:padding">20dp</item>
        <item name="android:background">@drawable/system_container_bg</item>
        <item name="android:stretchColumns">*</item>
        <item name="android:elevation">5dp</item>
    </style>

    <style name="systemContainerText">
        <item name="android:layout_weight">.9</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height"> wrap_content</item>
        <item name="android:textColor">#AA2020</item>
    </style>

    <style name="systemContainerBtn">
        <item name="android:background">@drawable/btn_primary_default</item>
        <item name="android:foreground">@drawable/ic_arrow_drop_down</item>

        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="PtnDetailText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">end|center_vertical</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">19sp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="PtnDetailValues">
        <item name="android:layout_weight">1</item>
        <item name="android:padding">20dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="themeRedButton">
        <item name="android:background">@drawable/btn_primary_default</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="themeWhiteButton">
        <item name="android:background">@drawable/btn_primary_white</item>
        <item name="android:textColor">#AA2020</item>
    </style>
</resources>


















